(ql:quickload :clml.extras)
(ql:quickload :clml.statistics)
(use-package :cl-plplot)
(use-package :clml.statistics)
(use-package :clml.cl-plplot)
(let ( (normal (coerce (rand-n (standard-normal-distribution) 100) 'vector))
       (beta (coerce (rand-n (beta-distribution 1 1) 100) 'vector))
       (gamma (coerce (rand-n (gamma-distribution 1 1) 100) 'vector)))
  (let ((window (basic-window ;:x-label "X" :y-label "Y"
                              :title "normal, beta and gamma")))
    (add-plot-to-window window (boxplot (list normal beta gamma)
                                        :fill-colors #(:grey :green :blue)
                                        :box-widths #(.3 .3 .4)))
    (render window "xwin")
    )
  )
